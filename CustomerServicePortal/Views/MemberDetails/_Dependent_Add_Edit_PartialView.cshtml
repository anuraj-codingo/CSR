
@model CustomerServicePortal.Models.DependentDetailModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.HiddenFor(x => x.SSN)
            @Html.HiddenFor(x=>x.DependentSeq)
            <label class="control-label">DependenetName</label>
            @Html.TextBoxFor(model => model.DependenetName, new { @class = "form-control", @placeholder = "DependenetName" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Class</label>
            @Html.TextBoxFor(model => model.Class, new { @class = "form-control", @placeholder = "Class" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Termination Date</label>
            <input type="text" name="TerminationDate" class="datepicker form-control" value="@(string.Format("{0:MM/dd/yyyy}",Model.TerminationDate))" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Effective Date</label>
            <input type="text" name="TerminationDate" class="datepicker form-control" value="@(string.Format("{0:MM/dd/yyyy}",Model.EffectiveDate))" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Plan</label>
            @Html.TextBoxFor(model => model.Plan, new { @class = "form-control", @placeholder = "Plan" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group checkBox-input">
            <label class="control-label">Status</label>
            @Html.CheckBoxFor(model => model.BoolStatus, new { @class = "form-control", @placeholder = "Status" })
        </div>
    </div>



</div>
